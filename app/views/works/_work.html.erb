<article class="panel">
	<h1><%= work.title %></h1>
	<div class="video-wrapper">
		<%= render inline: work.video_url %>
	</div>
	<div class="description">
		<%= markdown(work.description.to_s) %>
	</div>
</article>

<% if current_user %>
	<div class="admin">
		<%= link_to 'Show', work %>
		<%= link_to 'Edit', edit_work_path(work) %>
		<%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
<% end %>